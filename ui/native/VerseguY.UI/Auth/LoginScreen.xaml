<Page
    x:Class="VerseguY.UI.Auth.LoginScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Padding="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="400">
            <TextBlock Text="Welcome to VerseguY" FontSize="24" Margin="0,0,0,16" />
            <TextBox x:Name="UsernameBox" Header="Username" AutomationProperties.AutomationId="Login:Username" />
            <PasswordBox x:Name="PasswordBox" Header="Password" Margin="0,8,0,0" AutomationProperties.AutomationId="Login:Password" />
            <Button x:Name="LoginSubmit" Content="Login" Click="OnLogin" Margin="0,16,0,0" AutomationProperties.AutomationId="Login:Submit" />
            <ContentControl x:Name="OAuthButtons" Margin="0,8,0,0" />
        </StackPanel>
    </Grid>
</Page>